<%= search_form_for @q, :class => collapse_search_form, :id => "movies_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :movie_description_cont, "Movie description contains" %>
    <%= f.text_field :movie_description_cont, :class => "form-control", :placeholder => "Movie description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :duration, "Duration" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :duration_gteq, :class => "form-control", :placeholder => "Duration greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :duration_lteq, :class => "form-control", :placeholder => "Duration less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :release_year_cont, "Release year contains" %>
    <%= f.text_field :release_year_cont, :class => "form-control", :placeholder => "Release year contains" %>
  </div>

  <div class="form-group">
    <%= f.label :movie_title_cont, "Movie title contains" %>
    <%= f.text_field :movie_title_cont, :class => "form-control", :placeholder => "Movie title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :director_director_name_cont, "Director director_name contains" %>
    <%= f.text_field :director_director_name_cont, :class => "form-control", :placeholder => "Director director_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :actors_actor_name_cont, "Actors actor_name contains" %>
    <%= f.text_field :actors_actor_name_cont, :class => "form-control", :placeholder => "Actors actor_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :reviewers_email_cont, "Reviewers email contains" %>
    <%= f.text_field :reviewers_email_cont, :class => "form-control", :placeholder => "Reviewers email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :users_email_cont, "Users email contains" %>
    <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "Users email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/movies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#movies_filters">
  Show filters
</a>
