<!-- Form movie start -->
<%= form_with(model: @movie, local: true) do |f| %>
<!-- Form movie end -->

  <!-- Label and input for movie_photo start -->
  <div class="form-group">
    <%= f.label :movie_photo %>

    <!-- Input for movie_photo start -->
    <%= f.text_field :movie_photo, class: "form-control" %>
    <!-- Input for movie_photo end -->
  </div>
  <!-- Label and input for movie_photo end -->

  <!-- Label and input for movie_title start -->
  <div class="form-group">
    <%= f.label :movie_title %>

    <!-- Input for movie_title start -->
    <%= f.text_field :movie_title, class: "form-control" %>
    <!-- Input for movie_title end -->
  </div>
  <!-- Label and input for movie_title end -->

  <!-- Label and input for release_year start -->
  <div class="form-group">
    <%= f.label :release_year %>

    <!-- Input for release_year start -->
    <%= f.text_field :release_year, class: "form-control" %>
    <!-- Input for release_year end -->
  </div>
  <!-- Label and input for release_year end -->

  <!-- Label and input for duration start -->
  <div class="form-group">
    <%= f.label :duration %>

    <!-- Input for duration start -->
    <%= f.text_field :duration, class: "form-control" %>
    <!-- Input for duration end -->
  </div>
  <!-- Label and input for duration end -->

  <!-- Label and input for movie_description start -->
  <div class="form-group">
    <%= f.label :movie_description %>

    <!-- Input for movie_description start -->
    <%= f.text_field :movie_description, class: "form-control" %>
    <!-- Input for movie_description end -->
  </div>
  <!-- Label and input for movie_description end -->

  <!-- Label and input for director_id start -->
  <!-- Input for director_id start -->
  <%= f.hidden_field :director_id, value: @director.id %>
  <!-- Input for director_id end -->
  <!-- Label and input for director_id end -->

  <%= f.submit "Create movie", class: "btn btn-block btn-outline-secondary" %>
<% end %>
